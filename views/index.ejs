<form action="/" method="post">
      <div class="input"><span class="label">Question</span>
        <textarea name="question" cols="40" rows="5"></textarea>
      </div>
      <div class="input"><span class="label">First Response</span>
        <input type="text" name="firstResponse">
      </div>
      <div class="input"><span class="label">Second Response</span>
        <input type="text" name="secondResponse">
      </div>
      <div class="input"><span class="label">Third Response</span>
        <input type="text" name="thirdResponse">
      </div>
      <div class="input"><span class="label">Fourth Response</span>
        <input type="text" name="fourthResponse">
      </div><span class="label">Pollees See Results?
        <select name="polleesSeeResults">
          <option value>Yes</option>
          <option>No</option>
        </select></span>
      <div class="input"><span class="label">Set Close Time (minutes from now) If no time give, close manually</span>
        <input type="number" name="closeTime">
      </div>
      <div class="actions">
        <input type="submit" value="Create Survey">
      </div>
    </form>
